/* Carousel container */
.carousel-container {
  max-width: 1000px;
  position: relative;
  margin: auto;
  height: 100%;
  max-height: 300px;
  overflow: hidden;
}

/* Hide the images by default */
.myCarousel {
  display: none;
  height: 100%;
}

.myCarousel img {
  width: 100%;
  margin-top: -20%;
}

/* Next & previous buttons */
.prev,
.next {
  cursor: pointer;
  position: absolute;
